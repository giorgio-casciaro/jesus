  },
  "devDependencies": {
    "nodemon": "^1.11.0",
    "request": "^2.81.0",
    "tap": "^10.3.1"
  },
  "dependencies": {
    "body-parser": "^1.17.1",
    "co": "^4.6.0",
    "compression": "^1.6.2",
    "helmet": "^3.5.0",
    "ramda": "^0.23.0",
    "uuid": "^3.0.1",
    "zeromq": "^4.2.0"
  }
}
